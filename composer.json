{
	"name": "gilbertsoft/typo3-core-patches",
	"description": "Easily manage TYPO3 Core patches with Composer.",
	"license": "MIT",
	"type": "composer-plugin",
	"keywords": [
		"typo3",
		"cms",
		"core",
		"patch"
	],
	"readme": "README.md",
	"authors": [
		{
			"name": "Simon Gilli",
			"email": "simon.gilli@gilbertsoft.org",
			"homepage": "https://gilbertsoft.org",
			"role": "developer"
		}
	],
	"homepage": "https://github.com/GsTYPO3/core-patches",
	"support": {
		"issues": "https://github.com/GsTYPO3/core-patches/issues",
		"source": "https://github.com/GsTYPO3/core-patches"
	},
	"require": {
		"php": "^7.2 || ^8.0",
		"composer-plugin-api": "^1.1 || ^2.0",
		"cweagans/composer-patches": "^1.7"
	},
	"require-dev": {
		"bamarni/composer-bin-plugin": "^1.4",
		"composer/composer": "^1.2 || ^2.0",
		"ergebnis/composer-normalize": "*"
	},
	"autoload": {
		"psr-4": {
			"GsTYPO3\\CorePatches\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"GsTYPO3\\CorePatches\\Tests\\": "tests"
		}
	},
	"config": {
		"allow-plugins": {
			"ergebnis/composer-normalize": true,
			"bamarni/composer-bin-plugin": true,
			"cweagans/composer-patches": true,
			"gilbertsoft/typo3-core-patches": true
		}
	},
	"extra": {
		"bamarni-bin": {
			"target-directory": "tools"
		},
		"branch-alias": {
			"dev-main": "0.1.x-dev",
			"dev-master": "0.1.x-dev"
		},
		"class": "GsTYPO3\\CorePatches\\Plugin"
	},
	"scripts": {
		"post-install-cmd": [
			"@tools:setup:install"
		],
		"post-update-cmd": [
			"@tools:setup:update"
		],
		"bin": "echo 'bin not installed.'",
		"ci": [
			"@ci:static"
		],
		"ci:composer": [
			"@ci:composer:normalize",
			"@ci:composer:validate"
		],
		"ci:composer:normalize": "@composer normalize --dry-run",
		"ci:composer:require-checker": "composer-require-checker",
		"ci:composer:validate": "@composer validate",
		"ci:dynamic": [
			"@ci:tests"
		],
		"ci:php": [
			"@ci:php:copypaste",
			"@ci:php:lint",
			"@ci:php:sniff",
			"@ci:php:stan",
			"@ci:php:cs-fixer"
		],
		"ci:php:copypaste": "phpcpd src tests",
		"ci:php:cs": "php-cs-fixer fix -v --dry-run --using-cache no --diff",
		"ci:php:cs-fixer": "php-cs-fixer fix -v --dry-run --diff --diff-format=udiff",
		"ci:php:lint": "phplint --no-progress",
		"ci:php:sniff": "phpcs src",
		"ci:php:stan": "phpstan analyse --no-progress",
		"ci:php:unit": "phpunit",
		"ci:static": [
			"@ci:composer",
			"@ci:php",
			"@ci:yaml:lint"
		],
		"ci:tests": [
			"@ci:tests:unit",
			"@ci:tests:functional"
		],
		"ci:tests:functional": "phpunit -c phpunit.xml.dist --log-junit var/log/phpunit-functional.xml --testsuite \"Functional Test Suite\"",
		"ci:tests:unit": "phpunit -c phpunit.xml.dist --log-junit var/log/phpunit-unit.xml --testsuite \"Unit Test Suite\"",
		"ci:yaml:lint": "yaml-lint .ddev config",
		"clean": [
			"@tools:setup:clean",
			"rm -fr vendor .php-cs-fixer.cache .phplint-cache composer.lock"
		],
		"fix": [
			"@fix:composer",
			"@fix:php"
		],
		"fix:composer": [
			"@fix:composer:normalize"
		],
		"fix:composer:normalize": "@composer normalize",
		"fix:php": [
			"@fix:php:sniff",
			"@fix:php:cs"
		],
		"fix:php:cs": "php-cs-fixer fix",
		"fix:php:sniff": "phpcbf --standard=PSR12 src",
		"test": [
			"@test:php:lint",
			"@test:php:unit"
		],
		"test:composer:project:add": [
			"(test -d .build/project && rm -fr .build/project) || true",
			"mkdir -p .build/project",
			"cp tests/project/composer.json .build/project/composer.json",
			"@composer install -d.build/project",
			".build/project/vendor/bin/composer update -d.build/project",
			".build/project/vendor/bin/composer typo3:patch:apply 72837 -d.build/project -t",
			".build/project/vendor/bin/composer validate -d.build/project"
		],
		"test:composer:project:remove": [
			"test -f .build/project/composer.lock",
			".build/project/vendor/bin/composer typo3:patch:remove 72837 -d.build/project",
			".build/project/vendor/bin/composer validate -d.build/project"
		],
		"test:php:lint": [
			"phplint"
		],
		"test:php:unit": [
			"Composer\\Config::disableProcessTimeout",
			"phpunit"
		],
		"tools": [
			"@tools:static"
		],
		"tools:composer": [
			"@tools:composer:normalize",
			"@tools:composer:validate"
		],
		"tools:composer:normalize": [
			"@composer normalize"
		],
		"tools:composer:validate": [
			"@composer validate"
		],
		"tools:composer:validate:strict": [
			"@composer validate --strict"
		],
		"tools:dynamic": [
			"@tools:tests"
		],
		"tools:php": [
			"@tools:php:lint",
			"@tools:php:cs-fixer",
			"@tools:php:copypaste",
			"@tools:php:sniff",
			"@tools:php:stan"
		],
		"tools:php:cgl": "php-cs-fixer --diff -v fix --format=junit > var/log/php-cs-fixer.xml",
		"tools:php:copypaste": "phpcpd src tests",
		"tools:php:cs-fixer": "@php ./tools/php-cs-fixer fix --config .php_cs.php",
		"tools:php:lint": "phplint",
		"tools:php:rector": "rector process --dry-run --no-progress-bar --no-diffs",
		"tools:php:rector:process": "rector process --no-diffs",
		"tools:php:sniff": "phpcs --standard=PSR12 src tests",
		"tools:php:sniff:strict": "phpcs src tests",
		"tools:php:stan": "phpstan analyse",
		"tools:setup:clean": "rm -fr tools/**/composer.lock tools/**/vendor",
		"tools:setup:install": "@composer bin all install --ansi",
		"tools:setup:update": "@composer bin all update --ansi",
		"tools:static": [
			"@tools:composer",
			"@tools:php",
			"@tools:yaml:lint"
		],
		"tools:tests": [
			"@tools:tests:unit",
			"@tools:tests:functional"
		],
		"tools:tests:functional": "phpunit -c phpunit.xml.dist --log-junit var/log/phpunit-functional.xml --testsuite \"Functional Test Suite\"",
		"tools:tests:unit": "phpunit -c phpunit.xml.dist --log-junit var/log/phpunit-unit.xml --testsuite \"Unit Test Suite\"",
		"tools:yaml:lint": "yaml-lint .ddev"
	}
}
